DATABASE_URL="mysql://root@localhost:3306/gemly?schema=public"

# JWT configuration

JWT_SECRET=""

# PayHere configuration

PAYHERE_MERCHANT_ID="<your_payhere_merchant_id_here>"
PAYHERE_SECRET="<your_payhere_secret_here>"

PAYHERE_CURRENCY="LKR"
PAYHERE_RETURN_URL=""
PAYHERE_CANCEL_URL=""
PAYHERE_NOTIFY_URL="https://<public_api_url_here>/payhere/notify" # You can use a service like ngrok to expose your local server
PAYHERE_SANDBOX="true"

PAYHERE_MAX_AMOUNT="50000" # Maximum amount in LKR (for free plan)

# Server Port

PORT=3000